    <!-- Modal Modificar -->
    <div class="modal fade" id="UpdateModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabelLogout"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card fondo-form">
                                <div class="card-header fondo-form">
                                    <h4 class="card-title">Modificar Datos Usuario</h4>
                                    <hr>
                                </div>
                                <div class="card-body">
                                    <div class="basic-form">
                                        <form id="formModificar">

                                            <div class="form-row">
                                                <input type="text" hidden id="txtID">
                                                <div class="form-group col-md-6 mb-4">
                                                    <label>Nombres</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                                        </div>
                                                        <input type="text" id="txtNombres" class="form-control" placeholder="Nombres Completos">
                                                        <div class="invalid-feedback" id="txtNombresError"></div>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-6 mb-4">
                                                    <label>Apellidos</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                                        </div>
                                                        <input type="text" id="txtApellidos" class="form-control" placeholder="Apellidos Completos">
                                                        <div class="invalid-feedback" id="txtApellidosError"></div>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-6 mb-4">
                                                    <label>Correo Electronico</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fas fa-envelope-open"></i></span>
                                                        </div>
                                                        <input type="email" id="txtCorreo" class="form-control" placeholder="Escribir Correo Electronico">
                                                        <div class="invalid-feedback" id="txtCorreoError"></div>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-6 mb-4">
                                                    <label>Nombre Usuario</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                                        </div>
                                                        <input type="text" id="txtUsername" class="form-control" placeholder="Escribir Nombre Usuario">
                                                        <div class="invalid-feedback" id="txtUsernameError"></div>
                                                    </div>
                                                </div>
                                                
                                                <div class="form-group col-md-8 mx-auto mb-4">
                                                    <label>Asignar Rol</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                                                        </div>
                                                        <select id="selRol" class="form-control">
                                                            <option value="disabled" selected>Seleccionar Rol</option>
                                                            <option value="Usuario">Usuario</option>
                                                            <option value="Empleado">Empleado</option>
                                                            <option value="Administrador">Administrador</option>
                                                        </select>
                                                        <div class="invalid-feedback" id="selRolError"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <div class="mt-2">
                        <button type="submit" class="btn-sm btn-success mx-2" id="btnMdGuardar">
                            <i class="fas fa-check-square mr-2"></i>Guardar
                        </button>
                        <button type="submit" class="btn-sm btn-danger mx-2" data-dismiss="modal">
                            <i class="fas fa-times-circle mr-2" ></i>Cancelar
                        </button>
                        <button type="" class="btn-sm btn-warning mx-2" id="btnMdReset">
                            <i class="fas fa-exchange-alt mr-2"></i>Restablecer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

