        <!-- Container Fluid-->

<div class="container-fluid" id="container-wrapper">
    <div id="listarUsuarios"></div>
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800 font-weight-bold">
            Gesti√≥n de Roles
        </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/panelAdministrativo">Inicio</a></li>
            <li class="breadcrumb-item"><a href="/listarRoles">Roles</a></li>
            <li class="breadcrumb-item active" aria-current="page">
                Listar Roles
            </li>
        </ol>
    </div>

    <!-- Row -->
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-start mb-4">
                        <a class="btn btn-primary btn-sm mr-2 font-weight-bold" href="/crearRoles">
                            <i class="fas fa-user icono mr-3 "></i>Crear Roles</a>
                        
                    </div>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered rounded text-center" id="dataTable">
                            <thead class="thead-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre de Rol</th>
                                    <th>Descripcion</th>
                                    <th>Permisos</th>
                                    <th>Fecha Registro</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Modificar -->
    <div class="modal fade" id="UpdateModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabelLogout"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card fondo-form">
                                <div class="card-header fondo-form">
                                    <h4 class="card-title">Modificar Datos de Rol</h4>
                                    <hr>
                                </div>
                                <div class="card-body">
                                    <div class="basic-form">
                                        <form id="formModificar">
                                            <div class="form-row">
                                                <input type="text" hidden id="txtID">
                                                <div class="form-group col-md-6 mb-4">
                                                    <label>Nombre</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                                        </div>
                                                        <input type="text" id="txtNombre" class="form-control" placeholder="Nombre del Rol">
                                                        <div class="invalid-feedback" id="txtNombreError"></div>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-6 mb-4">
                                                    <label>Permisos</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fas fa-envelope-open"></i></span>
                                                        </div>
                                                        <input type="text" id="txtPermisos" class="form-control" placeholder="Permisos del rol">
                                                        <div class="invalid-feedback" id="txtPermisosError"></div>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-12 mb-4">
                                                    <label for="txtDescripcion" >Descripcion Roles</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"></span>
                                                        </div>
                                                        <textarea id="txtDescripcion" class="form-control min-height-5" placeholder="Descripcion del Rol..."></textarea>
                                                        <div class="invalid-feedback" id="txtDescripcionError"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <div class="mt-2">
                        <button type="submit" class="btn-sm btn-success mx-2" id="btnMdGuardar">
                            <i class="fas fa-check-square mr-2"></i>Guardar
                        </button>
                        <button type="submit" class="btn-sm btn-danger mx-2" data-dismiss="modal">
                            <i class="fas fa-times-circle mr-2" ></i>Cancelar
                        </button>
                        <button type="" class="btn-sm btn-warning mx-2" id="btnMdReset">
                            <i class="fas fa-exchange-alt mr-2"></i>Restablecer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div> 

