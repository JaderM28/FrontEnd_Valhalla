

<!-- Container Fluid-->
<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800 font-weight-bold">Gestion de Usuarios</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Inicio</a></li>
            <li class="breadcrumb-item"><a href="/listarUsuarios">Usuarios</a></li>
            <li class="breadcrumb-item active" aria-current="page">Crear Usuario</li>
        </ol>
    </div>


    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card fondo-form">
                <div class="card-header fondo-form">
                    <h4 class="card-title">Formulario Crear Usuarios</h4>
                    <hr>
                </div>
                <div class="card-body">
                    <div class="basic-form">
                        <form>
                            <div class="form-row">
                                <div class="form-group col-md-6 mb-4">
                                    <label>Nombres</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        </div>
                                        <input type="text" id="txtNombres" class="form-control" placeholder="Nombres Completos">
                                        <div class="invalid-feedback" id="txtNombresError"></div>
                                    </div>
                                </div>
                                <div class="form-group col-md-6 mb-4">
                                    <label>Apellidos</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        </div>
                                        <input type="text" id="txtApellidos" class="form-control" placeholder="Apellidos Completos">
                                        <div class="invalid-feedback" id="txtApellidosError"></div>
                                    </div>
                                </div>
                                <div class="form-group col-md-6 mb-4">
                                    <label>Correo Electronico</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-envelope-open"></i></span>
                                        </div>
                                        <input type="email" id="txtCorreo" class="form-control" placeholder="Escribir Correo Electronico">
                                        <div class="invalid-feedback" id="txtCorreoError"></div>
                                    </div>
                                </div>
                                <div class="form-group col-md-6 mb-4">
                                    <label>Nombre Usuario</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        </div>
                                        <input type="text" id="txtUsername" class="form-control" placeholder="Escribir Nombre Usuario">
                                        <div class="invalid-feedback" id="txtUsernameError"></div>
                                    </div>
                                </div>
                                <div class="form-group col-md-6 mb-4">
                                    <label>Telefono</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-phone-square"></i></span>
                                        </div>
                                        <input type="text" id="txtTelefono" class="form-control" placeholder="Escribir Telefono Movil">
                                        <div class="invalid-feedback" id="txtTelefonoError"></div>
                                    </div>
                                </div>
                                <div class="form-group col-md-6 mb-4">
                                    <label>Asignar Rol</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                                        </div>
                                        <select id="selRol" class="form-control">
                                            <option value="disabled" selected>Seleccionar Rol</option>
                                            <option value="Usuario">Usuario</option>
                                            <option value="Empleado">Empleado</option>
                                            <option value="Administrador">Administrador</option>
                                        </select>
                                        <div class="invalid-feedback" id="selRolError"></div>
                                    </div>

                                </div>
                                <div class="form-group col-md-6 mb-4">
                                    <label>Contrase単a</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-lock"></i></i></span>
                                        </div>
                                        <input type="password" id="txtPassword" class="form-control" placeholder="Escribir Contrase単a">
                                        <div class="invalid-feedback" id="txtPasswordError"></div>
                                    </div>
                                </div>
                                <div class="form-group col-md-6 mb-4">
                                    <label>Confirmar Contrase単a</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-lock"></i></i></span>
                                        </div>
                                        <input type="password" id="txtPasswordRepeat" class="form-control" placeholder="Escribir Contrase単a Nuevamente">
                                        <div class="invalid-feedback" id="txtPasswordRepeatError"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center mt-5">
                                <button type="button" id="btnGuardar" class="btn-sm btn-success mx-2">
                                    <i class="fas fa-check-square mr-2"></i>Guardar
                                </button>
                                <button type="submit" class="btn-sm btn-danger mx-2">
                                    <i class="fas fa-times-circle mr-2"></i>Cancelar
                                </button>
                                <button type="submit" class="btn-sm btn-warning mx-2">
                                    <i class="fas fa-exchange-alt mr-2"></i>Restablecer
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>






